background no
use_xft yes
xftfont 123:size=8
xftalpha 0.1
update_interval 1
total_run_times 0
own_window no 
own_window_type normal
own_window_transparent no
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes

maximum_width 300
draw_shades yes 
draw_outline no
draw_borders no
draw_graph_borders no
default_color lightgray
alignment top_right
gap_x 24

no_buffers yes
uppercase no
cpu_avg_samples 1 
net_avg_samples 1
override_utf8_locale yes
use_spacer none

TEXT
${alignc 32}${font Open Sans:size=20}${color lightgray}arch${color dodgerblue3} linux$font$color

${font Open Sans:bold:size=10}${color dodgerblue3}System${hr}$color$font
Uptime $alignr $uptime

${font Open Sans:bold:size=8.5}PROCESS $alignr USAGE$font
${top name 1}${alignr}${top cpu 1} %
${top name 2}${alignr}${top cpu 2} %
${top name 3}${alignr}${top cpu 3} %
${top name 4}${alignr}${top cpu 4} %

${font Open Sans:bold:size=8.5}RAM$font
$mem / $memmax $alignr $memperc %

${font Open Sans:bold:size=8.5}STORAGE$font
/dev/sda $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /} %
${fs_bar /}

${font Open Sans:bold:size=10}${color dodgerblue3}Network${hr}$color
${font Open Sans:bold:size=8.5}External IP ${font}${alignr}${execi 3600 wget -O - http://ip.tupeux.com | tail}$font
${if_up eth0}
${font Open Sans:bold:size=8.5}eth0 $font$alignr ${addr eth0}
up/down $alignr ${upspeedf eth0} / ${downspeedf eth0} kb/s
total $alignr ${totalup eth0} / $alignr ${totaldown eth0}
$endif${if_up eth1}
${font Open Sans:bold:size=8.5}eth1 $font$alignr ${addr eth1}
up/down $alignr ${upspeedf eth1} / ${downspeedf eth1} kb/s
total $alignr ${totalup eth1} / $alignr ${totaldown eth1}
$endif${if_up wlan0}
${font Open Sans:bold:size=8.5}wlan0 $font$alignr ${addr wlan0}
up/down $alignr ${upspeedf wlan0} / ${downspeedf wlan0} kb/s
total $alignr ${totalup wlan0} / $alignr ${totaldown wlan0}$endif

