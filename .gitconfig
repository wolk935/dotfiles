[alias]
	a = add
	bl = branch -avv
	br = branch
	chb = checkout -b
	ch = checkout
	co = commit
	coa = commit --amend
	d = diff
	dc = diff --cached
	diffc = diff --cached
	dl = diff HEAD~1
	diffl = diff HEAD~1
	h = log --oneline --graph --decorate
	hist = log --oneline --graph --decorate
	rb = rebase
	rbi = rebase --interactive
	stap = stash apply
	std = stash drop
	stl = stash list
	st = status -sb
	wipe = reset --hard

[color]
	branch = always
	diff = always
	interactive = always
	status = always

[core]
	editor = vim

[user]
	name = Daniel Cousens
	email = github@dcousens.com

[push]
	default = matching
