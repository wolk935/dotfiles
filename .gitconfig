[alias]
	a = add
	ad = add
	bl = branch -avv
	br = branch
	chb = checkout -b
	ch = checkout
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	coa = commit --amend
	com = commit -m
	d = diff
	dc = diff --cached
	dl = diff HEAD~1
	h = log --oneline --graph --decorate
	poh = push origin HEAD --tags
	pur = pull --rebase origin HEAD
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	rv = remote --verbose
	stap = stash apply
	std = stash drop
	stl = stash list
	st = status -sb

[color]
	branch = always
	diff = always
	interactive = always
	status = always

[core]
	editor = vim

[user]
	name = Daniel Cousens
	email = github@dcousens.com

[push]
	default = matching
